<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fort_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sodevan.com.forticon.FortPoints"
    tools:showIn="@layout/app_bar_fort_points">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/mag"
        android:padding="20dp"
        >

     <ImageView
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:layout_centerHorizontal="true"
         android:id="@+id/ims"

         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore A point"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_below="@id/ims"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mag"
        android:padding="15dp"
        android:background="#D4D4D4"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameq"
            android:textSize="20sp"
            android:text="Coding Ninjas"
            android:textColor="#3A79FF"
            android:layout_centerHorizontal="true"/>
    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@id/nameq"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/lv1"
        />

    </RelativeLayout>


</RelativeLayout>
